<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tests"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gizemsalcigmail.stratus.TestsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Sözcükte Anlam"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="36dp"
            android:id="@+id/button4"
            android:fontFamily="cursive"
            tools:textSize="17sp"
            android:layout_marginRight="5dp"
            android:layout_width="120dp" />

        <Button
            android:text="Paragraf"
            android:layout_height="100dp"
            android:layout_marginBottom="31dp"
            android:id="@+id/button7"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/button4"
            android:layout_alignStart="@+id/button4"
            android:fontFamily="cursive"
            android:textSize="17sp"
            android:layout_marginRight="5dp"
            android:layout_width="120dp" />

        <Button
            android:text="Anlatım Biçimleri"
            android:layout_height="100dp"
            android:id="@+id/button6"
            android:layout_width="150dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"
            android:textSize="17sp" />

        <Button
            android:text="Cümlede Anlam"
            android:layout_height="100dp"
            android:id="@+id/button5"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp"
            android:fontFamily="cursive"
            android:textSize="17sp"
            android:layout_width="120dp"
            android:layout_alignBottom="@+id/button4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/button4" />

        <Button
            android:text="Anlatım Bozuklukları"
            android:layout_height="100dp"
            android:id="@+id/button8"
            android:fontFamily="cursive"
            tools:textSize="17sp"
            android:layout_width="120dp"
            android:layout_alignTop="@+id/button7"
            android:layout_alignLeft="@+id/button5"
            android:layout_alignStart="@+id/button5" />
    </RelativeLayout>
</RelativeLayout>
